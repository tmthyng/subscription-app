<%= form_with model: subscription do |form| %>
  <div class='mt-4'>
    <%= form.label :name, :class => 'text-sm font-semibold' %><br />
    <%= form.text_field :name, :class => 'border-0 border-b-2 border-zinc-300 focus:border-zinc-500 focus:ring-0 dark:bg-zinc-700' %>
    <% subscription.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class='mt-6'>
    <%= form.label :cost, :class => 'text-sm font-semibold' %><br />
    <%= form.number_field :cost, :class => 'border-0 border-b-2 border-zinc-300 focus:border-zinc-500 focus:ring-0 dark:bg-zinc-700' %>
    <% subscription.errors.full_messages_for(:cost).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class='mt-6'>
    <%= form.label 'Currency', :class => 'text-sm font-semibold' %><br />
    <%= form.select(:currency, options_for_select([['NZD', 'NZD'], ['AUD', 'AUD'], ['USD', 'USD'], ['EURO', 'EURO']])) %>
  </div>

  <div class='mt-6'>
    <%= form.label 'Frequency', :class => 'text-sm font-semibold' %><br />
    <%= form.select(:frequency, options_for_select([['Every month', 'Every month'], ['Every 6 months', 'Every 6 months'], ['Every year', 'Every year']])) %>
  </div>

  <div class='mt-6'>
    <%= form.label :renewal_date, :class => 'text-sm font-semibold' %><br />
    <%= form.date_field :renewal_date, :class => 'border-0 border-b-2 border-zinc-300 focus:border-zinc-500 focus:ring-0 dark:bg-zinc-700' %>
    <% subscription.errors.full_messages_for(:renewal_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class='mt-6'>
    <button class='block float-left px-3 py-2 text-sm font-semibold rounded-md text-white bg-sky-400 hover:bg-sky-500'>
      <%= form.submit %>
    </button>
  </div>
<% end %>
