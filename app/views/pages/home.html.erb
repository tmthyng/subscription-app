<div class='mx-auto w-11/12 lg:w-1/2'>
  <h1 class='mt-32 text-4xl font-bold uppercase'>Subscriptions</h1>

  <button class='mt-3 px-4 py-2 text-sm font-semibold text-white bg-sky-400 hover:bg-sky-500 rounded-md'>
    <%= link_to 'New Subscription', new_page_path %>
  </button>

  <ul class='mt-12'>
    <% @pages.each do |page| %>
      <li>
        <span class='hover:underline'>
          <%= link_to page.title, page %>
        </span>
        &rarr;
      </li>
    <% end %>
  </ul>
</div>
